#!/usr/bin/env bash

. /etc/os-release

if [[ "$VERSION_ID" -eq 10 ]]
then
  bash /usr/local/bin/ncp-dist-upgrade.d/debian-10.sh
elif [[ "$VERSION_ID" -eq 11 ]]
then
  bash /usr/local/bin/ncp-dist-upgrade.d/debian-11.sh
else
  echo "No dist-upgrade available for OS version: Debian ${VERSION}."
  exit 0
fi